<div class="flex flex-col items-center min-h-screen bg-gray-800 p-6">
  <div class="w-full max-w-4xl bg-gray-700 p-6 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold text-white mb-6 text-center">Daftar Siswa</h1>

    <% @grouped_classroom_students.each do |(year, semester), classroom_students| %>
      <div class="mb-8">
        <!-- Year and Semester -->
        <h2 class="text-xl font-medium text-gray-200 mb-2">Tahun: <%= year %> Semester: <%= semester %></h2>

        <% classroom_students.group_by(&:classroom).each do |classroom, students| %>
          <!-- Classroom -->
          <div class="mb-4">
            <!-- <h3 class="text-xl font-medium text-gray-200 mb-2">Kelas: <%= classroom.name %></h3> -->

            <!-- Students Table -->
            <div class="overflow-x-auto">
              <table class="table-auto w-full border-collapse border border-gray-600 text-gray-300">
                <thead>
                  <tr class="bg-gray-800">
                    <th class="px-4 py-2 text-left border-b border-gray-600"><%= classroom.name %></th>
                  </tr>
                </thead>
                <tbody>
                  <% students.each do |classroom_student| %>
                    <% student = classroom_student.student %>
                    <tr class="hover:bg-gray-600">
                      <td class="px-4 py-2 border-b border-gray-600"><%= student.name %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
