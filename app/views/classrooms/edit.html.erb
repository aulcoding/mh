<h1>Update Classroom</h1>

<%= form_with(model: @classroom, local: true) do |form| %>
  <% if @classroom.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@classroom.errors.count, "error") %> prohibited this classroom from being saved:</h2>
      <ul>
        <% @classroom.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :level_id %>
    <%= form.collection_select :level_id, Level.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :gender_id %>
    <%= form.collection_select :gender_id, Gender.all, :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', classrooms_path %>
