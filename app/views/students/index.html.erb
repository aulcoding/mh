<h1 class="text-3xl font-bold text-center text-white mt-4 mb-6">Santri</h1>

<div class="flex justify-end mb-4">
  <%= link_to 'Buat Santri Baru', new_student_path, class: "btn btn-info hover:btn-warning text-white py-2 px-4 rounded-lg mx-auto" %>
</div>

<div class="overflow-x-auto">
  <table class="table-auto w-full text-left bg-gray-800 text-white rounded-lg shadow-lg border border-gray-700">
    <thead class="bg-gray-700">
      <tr>
        <th class="px-4 py-2">Nama</th>
        <th class="px-4 py-2">Jenis Kelamin</th>
        <th class="px-4 py-2">Panggilan</th>
        <th class="px-4 py-2">Tanggal Lahir</th>
        <th class="px-4 py-2" colspan="3">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr class="border-b border-gray-700 hover:bg-gray-700">
          <td class="px-4 py-2"><%= student.name %></td>
          <td class="px-4 py-2"><%= student.gender.name %></td>
          <td class="px-4 py-2"><%= student.nickname %></td>
          <td class="px-4 py-2"><%= student.birthdate %></td>
          <td class="px-4 py-2">
            <%= link_to 'Show', student_path(student), class: "text-blue-400 hover:text-blue-500" %>
          </td>
          <td class="px-4 py-2">
            <%= link_to 'Edit', edit_student_path(student), class: "text-yellow-400 hover:text-yellow-500" %>
          </td>
          <td class="px-4 py-2">
            <%= button_to 'Destroy', student_path(student), method: :delete, data: { confirm: 'Are you sure?' },
                  class: "text-red-400 hover:text-red-500" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
