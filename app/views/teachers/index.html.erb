<h1 class="text-3xl font-bold text-center text-white mb-6">Teachers</h1>

<div class="mb-2 text-center">
  <%= link_to 'New Teacher', new_teacher_path, class: "btn btn-primary bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg" %>
</div>

<div class="overflow-x-auto">
  <table class="table-auto w-full border-collapse border border-gray-700 text-white">
    <thead class="bg-gray-800">
      <tr>
        <th class="border border-gray-700 px-4 py-2 text-left">Name</th>
        <th class="border border-gray-700 px-4 py-2 text-left">Gender</th>
        <th colspan="3" class="border border-gray-700 px-4 py-2"></th>
      </tr>
    </thead>
    <tbody>
      <% @teachers.each do |teacher| %>
        <tr class="bg-gray-700 hover:bg-gray-600">
          <td class="border border-gray-600 px-4 py-2"><%= teacher.name %></td>
          <td class="border border-gray-600 px-4 py-2"><%= teacher.gender.name %></td>
          <td class="border border-gray-600 px-4 py-2">
            <%= link_to 'Show', teacher_path(teacher), class: "text-blue-400 hover:text-blue-600" %>
          </td>
          <td class="border border-gray-600 px-4 py-2">
            <%= link_to 'Edit', edit_teacher_path(teacher), class: "text-yellow-400 hover:text-yellow-600" %>
          </td>
          <td class="border border-gray-600 px-4 py-2">
            <%= button_to 'Destroy', teacher_path(teacher), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-400 hover:text-red-600" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
